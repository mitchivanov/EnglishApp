<Window x:Class="EnglishTrainer.CorrectMistakeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Correct Mistake" Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Name="lblIncorrectText" Text="Incorrect Text:" Margin="10"/>
            <TextBox Name="txtCorrectedText" Width="250" Margin="10"/>
            <Button Name="btnSubmit" Content="Submit" Width="100" Click="btnSubmit_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>