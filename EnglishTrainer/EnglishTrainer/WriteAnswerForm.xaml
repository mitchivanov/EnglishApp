<Window x:Class="EnglishTrainer.WriteAnswerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Write Answer" Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Name="lblQuestion" Text="Question:" Margin="10"/>
            <TextBox Name="txtAnswer" Width="250" Margin="10"/>
            <Button Name="btnSubmit" Content="Submit" Width="100" Click="btnSubmit_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>