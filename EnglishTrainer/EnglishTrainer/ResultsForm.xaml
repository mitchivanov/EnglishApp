<Window x:Class="EnglishTrainer.ResultsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Results" Height="300" Width="400">
    <Grid>
        <ListView Name="resultsList" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="User Name" DisplayMemberBinding="{Binding UserName}" Width="100"/>
                    <GridViewColumn Header="Correct Answers" DisplayMemberBinding="{Binding CorrectAnswers}" Width="100"/>
                    <GridViewColumn Header="Time Spent" DisplayMemberBinding="{Binding TimeSpent}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>