<Window x:Class="EnglishTrainer.MultipleChoiceForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multiple Choice" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Name="lblQuestion" Text="Question:" Margin="10"/>
            <RadioButton Name="rdoOption1" Content="Option 1" Margin="10"/>
            <RadioButton Name="rdoOption2" Content="Option 2" Margin="10"/>
            <RadioButton Name="rdoOption3" Content="Option 3" Margin="10"/>
            <Button Name="btnSubmit" Content="Submit" Width="100" Click="btnSubmit_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>