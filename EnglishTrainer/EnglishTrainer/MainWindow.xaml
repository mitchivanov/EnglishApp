<Window x:Class="EnglishTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="English Trainer" Height="350" Width="525">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Name="btnTraining" Content="Training" Width="200" Height="50" Click="btnTraining_Click"/>
            <Button Name="btnResults" Content="Results" Width="200" Height="50" Click="btnResults_Click"/>
            <Button Name="btnSettings" Content="Settings" Width="200" Height="50" Click="btnSettings_Click"/>
        </StackPanel>
    </Grid>
</Window>