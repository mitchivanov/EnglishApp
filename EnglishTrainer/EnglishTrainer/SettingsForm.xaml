<Window x:Class="EnglishTrainer.SettingsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Brightness" Margin="10"/>
            <Slider Name="trackBarBrightness" Minimum="0" Maximum="100" ValueChanged="trackBarBrightness_ValueChanged" Margin="10"/>
            <CheckBox Name="chkFullscreen" Content="Fullscreen" Checked="chkFullscreen_Checked" Unchecked="chkFullscreen_Unchecked" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>